<!-- Fast Post Start-->
<div class="col-12">
  <div class="box">
    <div class="box-head">
      <h3 class="title">تنظیمات وبلاگ</h3>
    </div>
    <div class="box-body">
      <div class="row mbn-20">
        <!--Form Field-->
        <form action="/admin/settings/update" method="POST">
          <div class="row mbn-15">
            <div class="col-lg-8 col-12 mb-15">
              <!-- عنوان وبلاگ -->
              <h6 class="mb-15 mr-10">عنوان وبلاگ</h6>
              <input
                value="<%= settings.blog_title %>"
                name="blog_title"
                type="text"
                class="form-control"
                placeholder="عنوان وبلاگ"
              />
            </div>
            <div class="col-lg-8 col-12 mb-15">
              <!-- توضیحات وبلاگ -->
              <h6 class="mb-15 mr-10">توضیحات وبلاگ</h6>
              <textarea
                name="blog_description"
                class="form-control"
                placeholder="توضیحات مربوط به وبلاگ"
              ><%= settings.blog_description %>
              </textarea>
            </div>
            <div class="col-lg-8 col-12 mb-15">
              <!-- تعداد مقالات هر صفحه -->
              <h6 class="mb-15 mr-10">تعداد مقالات هر صفحه</h6>
              <input
                value="<%= settings.blog_per_page %>"
                name="blog_per_page"
                type="text"
                class="form-control"
                placeholder="تعداد مقالات هر صفحه"
              />
            </div>
            <div class="col-lg-4 col-12 mb-20 mr-10">
              <!-- تنظیمات موردی -->
              <h6 class="mb-15">تنظیمات موردی</h6>
              <label
                ><input
                 type="checkbox"
                 name="everyone_can_comment"
                 <% if(settings.everyone_can_comment === "on"){ %> checked <% } %>
                />آیا همه
                میتوانند دیدگاه ثبت کنند؟</label
              >
            </div>

            <div class="col-lg-8 col-12 mb-40 mt-15">
              <button class="button button-google-maps">
                <i class="zmdi zmdi-rotate-left"></i><span>آپدیت تنظیمات</span>
              </button>
            </div>
          </div>
        </form>
        <!--Form Field-->
      </div>
    </div>
  </div>
</div>
<!-- Fast Post End-->
